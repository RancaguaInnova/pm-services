{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "typeRoots": ["node_modules/@types"],
    "types": [
      "jest",
      "node"
    ],
    "sourceMap": true,
    "target": "es6",
    "baseUrl": "./pm-services",
    "importHelpers": true
  },
  "typeAcquisition": {
    "include": ["jest"]
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}